nQpts1D       5

# Riemann Solver:
fconv_type Rusanov
fvisc_type LDG
rus_k      0.0
ldg_b      0.0
ldg_tau    1.0

# Equation Specific Parameters:
ic_type  1         (0 = Uniform, 1 = Functional (defined in funcs.cpp))

# Advection-Diffusion
AdvDiff_Ax 1
AdvDiff_Ay 0 
AdvDiff_D 0

# Filter
filt_on 1     # 1: enable filtering
sen_write 1   # 1: write sensor values for each element
sen_norm 0    # 1: normalize solution within each element
sen_Jfac 0    # Sensor threshold \in [0,1]: 0 for ramp, 1 for step
